{
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "integration"],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "paths": {
      "polyglot": ["./"]
    },
    "types": ["node", "jest"]
  }
}
